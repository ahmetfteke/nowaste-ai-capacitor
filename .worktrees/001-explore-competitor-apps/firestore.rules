rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user owns the document being created
    function isCreatingOwn() {
      return isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    // Storage Spaces collection
    match /storageSpaces/{spaceId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Food Items collection
    // Max 1000 items per user (enforced via foodItemCount on user document)
    match /foodItems/{itemId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.foodItemCount < 1000;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Alerts collection
    match /alerts/{alertId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Notification Settings collection
    match /notificationSettings/{settingId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // User Settings collection
    match /userSettings/{settingId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Captures collection (for AI processing)
    match /captures/{captureId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Shopping List collection
    // Max 1000 items per user (enforced via shoppingListItemCount on user document)
    match /shoppingList/{itemId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.shoppingListItemCount < 1000;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Usage tracking collection (for free tier limits)
    match /usage/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
    }

    // Recipes collection
    match /recipes/{recipeId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Recipe Usage tracking (for monthly limits)
    match /recipeUsage/{usageId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isCreatingOwn();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Community Suggestions (Feedback System)
    match /suggestions/{suggestionId} {
      // Anyone authenticated can read all suggestions (community-wide)
      allow read: if isAuthenticated();

      // Only creator can create (with their userId)
      allow create: if isCreatingOwn();

      // Anyone authenticated can update upvotes/upvoters (for voting) or commentCount
      allow update: if isAuthenticated()
        && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['upvotes', 'upvoters', 'commentCount']);

      // Only creator can delete their own suggestion
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Comments subcollection
      match /comments/{commentId} {
        // Anyone authenticated can read comments
        allow read: if isAuthenticated();

        // Anyone authenticated can create comments (with their userId)
        allow create: if isAuthenticated()
          && request.resource.data.userId == request.auth.uid;

        // Only comment owner can delete their comment
        allow delete: if isAuthenticated()
          && resource.data.userId == request.auth.uid;
      }
    }
  }
}
